{
  "compilerOptions": {
    "rootDirs": [
      "api"
    ],
    "outDir": "dist",
    "lib": ["es2022"],
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "api/**/*.ts",
    "api/**/*.graphql"
  ],
  "exclude": [
    "dist",
    "node_modues"
  ]
}