{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2022"],
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
  },
  "include": [
    "api/index.ts",
    "src/**/*.ts",
    "src/**/*.graphql"
  ],
  "exclude": [
    "dist",
    "node_modues"
  ]
}